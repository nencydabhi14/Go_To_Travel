<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="1500dp"
    android:background="@color/white"
    tools:context=".Dubai_Details">

    <androidx.cardview.widget.CardView
        android:id="@+id/actionbar_size_out"
        android:layout_width="match_parent"
        android:layout_height="?actionBarSize"
        android:backgroundTint="@color/ofwhite"
        app:cardElevation="4dp">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:padding="10dp">


            <ImageView
                android:id="@+id/back_dubai"
                android:layout_width="40dp"
                android:layout_height="match_parent"
                android:layout_centerVertical="true"
                android:src="@drawable/ic_baseline_keyboard_backspace_24"
                android:tint="@color/blue" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:layout_centerHorizontal="true"
                android:layout_marginStart="10dp"
                android:fontFamily="sans-serif-medium"
                android:text="Dubai"
                android:textColor="@color/blue"
                android:textSize="19dp" />
        </RelativeLayout>


    </androidx.cardview.widget.CardView>

    <ScrollView
        android:layout_width="wrap_content"
        android:layout_height="1500dp"
        android:layout_below="@id/actionbar_size_out">

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

            <ImageView
                android:id="@+id/img1"
                android:layout_width="match_parent"
                android:layout_height="220dp"
                android:scaleType="centerCrop"
                android:src="@drawable/dubai" />

            <RelativeLayout
                android:id="@+id/history_part"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/img1"
                android:padding="10dp">


                <TextView
                    android:id="@+id/history"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="sans-serif-medium"
                    android:text="History"
                    android:textColor="@color/black"
                    android:textSize="20dp" />

                <TextView
                    android:id="@+id/history_txt"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/history"
                    android:layout_marginTop="4dp"
                    android:text="Dubai is thought to have been established as a fishing village in the early 18th century and was, by 1822, a town of some 700â€“800 members of the Bani Yas tribe and subject to the rule of Sheikh Tahnun bin Shakhbut of Abu Dhabi.Founded by: Obeid bin Said &amp; Maktoum bin B...
Subdivisions: Towns &amp; villages: Jebel Ali; Al A...more"
                    android:textColor="#686868"
                    android:textSize="15dp" />

                <ImageView
                    android:id="@+id/img2"
                    android:layout_width="150dp"
                    android:layout_height="150dp"
                    android:layout_below="@id/history_txt"
                    android:layout_marginTop="8dp"
                    android:scaleType="centerCrop"
                    android:src="@drawable/dubai2" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/history_txt"
                    android:layout_marginStart="10dp"
                    android:layout_marginTop="8dp"
                    android:layout_toEndOf="@+id/img2"
                    android:text="Located in the eastern part of the Arabian Peninsula on the coast of the Arabian Gul hub of Western Asia. It is also a for passengers and cargo. Oil revenue helped accelerate the development of the city, which was already a major mercantile hub. "
                    android:textColor="#686868"
                    android:textSize="15dp" />


            </RelativeLayout>

            <org.imaginativeworld.whynotimagecarousel.ImageCarousel
                android:id="@+id/dubai_image"
                android:layout_width="match_parent"
                android:layout_height="300dp"
                android:layout_below="@id/history_part"
                app:autoPlay="true"
                app:autoPlayDelay="3000"
                app:carouselBackground="#00000000"
                app:imageScaleType="centerCrop"
                app:infiniteCarousel="true" />

            <TextView
                android:id="@+id/img_niche"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/dubai_image"
                android:layout_marginTop="5dp"
                android:padding="10dp"
                android:text="The of 1908 struck the pearling boats of Dubai and the coastal emirates towards the end of the pearling season that year, resulting in the loss of a dozen boats and over 100 men. The disaster was a major setback for Dubai, with many families losing their breadwinner and merchants facing financial ruin. These losses came at a time when the tribes of the interior were also experiencing poverty. In a letter to the Sultan of Muscat in 1911, Butti laments, Misery and poverty are raging among them, with the result that they are struggling, looting and killing among themselves."
                android:textColor="#686868"
                android:textSize="15dp" />

            <RelativeLayout
                android:id="@+id/layout"
                android:layout_width="wrap_content"
                android:layout_height="330dp"
                android:padding="10dp"
                android:layout_below="@id/img_niche">

                <TextView
                    android:id="@+id/txt"
                    android:layout_width="200dp"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="8dp"
                    android:text="Located in the eastern part of the Arabian Peninsula on the coast of the Arabian Gul hub of Western Asia. It is also a for passengers and cargo. Oil revenue helped accelerate the development of the city, which was already a major mercantile hub. "
                    android:textColor="#686868"
                    android:textSize="15dp" />

                <ImageView
                    android:id="@+id/img3"
                    android:layout_width="150dp"
                    android:layout_height="160dp"
                    android:layout_alignParentEnd="true"
                    android:layout_marginTop="8dp"
                    android:layout_toEndOf="@+id/txt"
                    android:scaleType="centerCrop"
                    android:src="@drawable/dubai3" />

                <Button
                    android:id="@+id/form_dubai"
                    android:layout_width="match_parent"
                    android:layout_height="55dp"
                    android:layout_alignParentBottom="true"
                    android:backgroundTint="@color/blue"
                    android:fontFamily="sans-serif-medium"
                    android:text="Book Your Trip"
                    android:textSize="16dp" />

            </RelativeLayout>


            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/layout"
                android:layout_alignParentBottom="true">


            </RelativeLayout>

        </RelativeLayout>

    </ScrollView>



</RelativeLayout>