<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="400dp"
    android:layout_gravity="center"
    android:background="@color/white"
    android:layout_height="440dp">

    <RelativeLayout
        android:id="@+id/up_out"
        android:layout_width="match_parent"
        android:layout_height="45dp"
        android:background="@color/blue"
        android:gravity="top">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:fontFamily="sans-serif-medium"
            android:text="Select Place"
            android:textColor="@color/white"
            android:textSize="18dp" />

    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/grops_All"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/up_out"
        android:layout_marginStart="25dp"
        android:layout_marginTop="5dp"
        android:layout_marginEnd="25dp">

        <RadioGroup
            android:id="@+id/all_City"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

            <RadioButton
                android:id="@+id/dubai"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:buttonTint="@color/blue"
                android:fontFamily="sans-serif-medium"
                android:text="Dubai"
                android:textColor="#979696"
                android:textSize="15dp" />

            <RadioButton
                android:id="@+id/maldives"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:buttonTint="@color/blue"
                android:fontFamily="sans-serif-medium"
                android:text="Maldives"
                android:textColor="#979696"
                android:textSize="15dp" />

            <RadioButton
                android:id="@+id/bali"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:buttonTint="@color/blue"
                android:fontFamily="sans-serif-medium"
                android:text="Bali"
                android:textColor="#979696"
                android:textSize="15dp" />


            <RadioButton
                android:id="@+id/singapore"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:buttonTint="@color/blue"
                android:fontFamily="sans-serif-medium"
                android:text="Singapore"
                android:textColor="#979696"
                android:textSize="15dp" />

            <RadioButton
                android:id="@+id/moscow"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:buttonTint="@color/blue"
                android:fontFamily="sans-serif-medium"
                android:text="Moscow"
                android:textColor="#979696"
                android:textSize="15dp" />

            <RadioButton
                android:id="@+id/america"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:buttonTint="@color/blue"
                android:fontFamily="sans-serif-medium"
                android:text="America"
                android:textColor="#979696"
                android:textSize="15dp" />


        </RadioGroup>

    </RelativeLayout>


    <RelativeLayout
        android:id="@+id/done_btn"
        android:layout_width="match_parent"
        android:layout_height="38dp"
        android:layout_below="@+id/grops_All"
        android:layout_marginTop="40dp"
        android:background="@drawable/ripal_effect_rectangle">

        <!--        <Button-->
        <!--            android:layout_width="wrap_content"-->
        <!--            android:layout_height="wrap_content"-->
        <!--            android:layout_centerHorizontal="true"-->
        <!--            android:layout_alignParentBottom="true"-->
        <!--            android:backgroundTint="#DF1837"-->
        <!--            android:text="SUBMIT"-->
        <!--            android:textColor="@color/white" />-->


        <TextView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_alignParentBottom="true"
            android:layout_centerInParent="true"
            android:layout_marginTop="5dp"
            android:fontFamily="sans-serif-medium"
            android:text="UPDATE"
            android:textColor="@color/blue"
            android:textSize="20dp" />
    </RelativeLayout>



</RelativeLayout>